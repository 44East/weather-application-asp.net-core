@page 
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}



<h2>Enter city for get the weather</h2>

<form method="post" >
    <input type="text"  name="cityName" />
    <input type="submit" value="Sumbit" />
</form>
<h3>Weather:</h3>
    <form method="post">
       <ul> 
       @{
            int i = 0;
       }
       @{
            if(!(Model.Weather.Count() < 5))
            {
                foreach (var item in Model.Weather)
                {            
                    i++;            
                    <h4>"Day @i"</h4><dd>@item</dd>
                }
            }
            else
            {
                foreach(var item in Model.Weather)
                {
                    <dd>@item</dd>
                }
            }
       }
        
       </ul>
    </form>


